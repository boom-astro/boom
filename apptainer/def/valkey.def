Bootstrap: docker
From: valkey/valkey:7.2.6

%environment
    # ALLOW_EMPTY_PASSWORD is recommended only for development.
    export ALLOW_EMPTY_PASSWORD=yes
    export VALKEY_DISABLE_COMMANDS=FLUSHDB,FLUSHALL

%runscript
    # Disable persistence for benchmarking
    exec valkey-server --save "" --appendonly no
